#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;


int main()
{
	int suma,i,N;
	cout<<"Ingresar el valor de N:";
	cin>>N;
	cout<<"\n suma= ";
	suma=0;
		for(i=1;i<=N;i=i+2)
		{	
			suma= suma+i;
		cout<<i<<"+";
		}
		cout<<"\n la suma de los impares hasta el " <<N<< " es: " <<suma;
		getch();

}
