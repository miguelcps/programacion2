#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

void main()
{
	char letra;
	int i,numeroletra=32;
	letra='*';
	for (i=0; i<=numeroletra;i++)
		cout<<letra;
	cout<<"\n";
	cout<<"* \t Me llamo Miguel        *";
	cout<<"\n";
	for (i=0;i<=numeroletra;i++)
		cout<<letra;
	cout<<"\n";
	getch();
}
